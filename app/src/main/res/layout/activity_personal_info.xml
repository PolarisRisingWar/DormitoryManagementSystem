<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfoActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backFromPersonalInfo"
        android:text="返回"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/paddingSize"
        android:paddingLeft="@dimen/paddingSize"
        android:paddingTop="@dimen/paddingSize"
        android:id="@+id/personal_info_tableLayout"
        android:stretchColumns="1"
        >
        <TableRow>

            <TextView
                android:text="学号"
                android:textSize="@dimen/personalInfoSize" />

            <TextView
                android:id="@+id/studentIDinPI"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="姓名"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/studentName"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="入学年份"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/inYear"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="联系电话"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/phoneNumber"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="专业"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/majority"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="学院"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/college"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="寝室楼"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/dormBuilding"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="寝室号"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/dormNumber"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow
            android:paddingTop="@dimen/paddingSize">
            <TextView
                android:text="校园卡余额"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/cardBalance"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="热水余额"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/waterBalance"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="电费余额"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/electricityBalance"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="信用积分"
                android:textSize="@dimen/personalInfoSize"/>
            <TextView
                android:id="@+id/creditScore"
                android:textSize="@dimen/personalInfoSize"
                android:paddingLeft="@dimen/paddingSize"/>
        </TableRow>
    </TableLayout>

</LinearLayout>